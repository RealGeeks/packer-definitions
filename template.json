    {
      "type": "shell",
      "scripts": [
        "scripts/base.sh",
        "scripts/ruby.sh",
        "scripts/puppet.sh",
        "scripts/vagrant.sh",
        "scripts/virtualbox.sh",
        "scripts/cleanup.sh"
      ],
      "override": {
        "virtualbox": {
          "execute_command": "echo 'veewee'|sudo -S sh '{{.Path}}'"
